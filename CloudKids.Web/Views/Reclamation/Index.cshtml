@model IEnumerable<CloudKids.Domain.Entities.Reclamation>

@{
    ViewBag.Title = "Index";
}
<br /><br /><br /><br /><br /><br /><br /><br />
<h2>Index</h2>

<div class="widget widget-search">
    @using (Html.BeginForm("Index", "Reclamation", FormMethod.Get))
    {
        @Html.TextBox("search")
        <button type="submit"><i class="fa fa-search"></i></button>
    }
</div><!-- widget-search end-->
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProfilJardin.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfilParent.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Motif)
        </th>
        <th></th>
    </tr>

@if (Model != null)
{
    foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProfilJardin.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProfilParent.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Motif)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
}

</table>
